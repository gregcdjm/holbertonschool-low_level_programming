#include "main.h"
/**
 * sqr - like the return
 * @n: numb
 * @i: square
 * Return: power 1/2 of x
 */

int sqr(int n, int i)
{
	if (n == i * i)
		return (i);
	else if (n <= i)
		return (-1);
	i++;
	return (sqr(n, i));
}

/**
 * _sqrt_recursion - like the return
 * @n: numb
 * Return: power 1/2 of x
 */

int is_prime_number(int n)
{
	int i = 0;

	if (n <= 1)
		return (0);
	return (sqr(n, i));
}
