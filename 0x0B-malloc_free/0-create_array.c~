#include "main.h"
#include <stdio.h>
/**
 * create_array - create array
 * @size: size of array
 * @c: array
 * Return: pointer or NULL
 */
char *create_array(unsigned int size, char c)
{
	char a;
	int i;

	if (size == 0)
		return (NULL)
	a = malloc(size * sizeof(c));
	for (i = 0; a[i] != 0; i++)
		a[i] = 'c';
	return (a)
}
